<%- include('../partials/header') %>

<h1>Hello <%= user.name %></h1>
<h2>Characters:</h2>
    <% if(characters) { %>
    <% characters.forEach(function(c){ %>
        <h3><a href="/characters/<%= c._id %>"><%= c.name %></a><form action="/characters/<%= c._id %>?_method=DELETE" method="POST" class="secondary-content">
            <button type="submit" class="btn-small red-text">X</button>
          </form></h3>
        <h3><%= c.class %></h3>
        <h3>Level: <%= c.level %></h3>
    <% }); %>
    <% } %>
<a href="/characters/new">New Character</a>

<%- include('../partials/footer') %>