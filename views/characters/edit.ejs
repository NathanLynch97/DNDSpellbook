<form action="/characters/<%= character._id %>?_method=PUT" method="POST" autocomplete="off">
    <input type="text" name="name" value="<%= character.name %>">
    <input type="text" name="class" value="<%= character.class %>">
    <input type="text" name="level" value="<%= character.level %>">
    <button type="submit">Save Character</button>
</form>

